<section class="c-contacts-form pb-10 bg-dark">
  <div class="container-medium">
    <ul class="breadcrumbs">
      <li><a href="#">Nábor</a></li>
      <li><span>Kontaktní formulář</span></li>
    </ul>
    <div class="o-content">
      <h1 class="h2">Kontaktní formulář</h1>
      <div class="c-contacts-form__inner mb-10">
        <form action="">
          <div class="row">
            <div class="col-md-4 col-12">
              <label for="">
                Jméno a příjmení:
                <input name="name" type="text" required />
              </label>
            </div>
            <div class="col-md-4 col-12">
              <label for="">
                E-mail:
                <input name="email" type="email" required />
              </label>
            </div>
            <div class="col-md-4 col-12">
              <label for="">
                Předmět zprávy:
                <input type="text" />
              </label>
            </div>
            <label for="">
              Text zprávy:
              <textarea name="" id="" cols="20" rows="8"></textarea>
            </label>

            <button class="link link--border mx-auto">Odeslat</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
